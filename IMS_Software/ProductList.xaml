<Page
    x:Class="COnnection_test.ProductList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:COnnection_test"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ProductList"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Width="130"
            Height="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="ProductPerformanceCLicked"
            Content="Product Performance" />
        <Button
            Grid.Row="1"
            Width="100"
            Height="40"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="EditButtonCLicked"
            Content="Add/Edit" />
        <Label
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="This button will be in the product list view and will direct to Add/Edit page of product view. By default it will direct to edit page of productID 1" />
    </Grid>
</Page>
